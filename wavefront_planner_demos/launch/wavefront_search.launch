<launch>
  <!-- Wavefront search demo -->
  <param name="/wavefront_planner_demos/search_demo" value="true" />
  <node pkg="wavefront_planner_demos" type="wavefront_planner_demos" name="wavefront_search_demo" output="screen">
    <param name="mapImgDirectory" value="$(find wavefront_planner_demos)/map/maze.png" />
    <param name="gridResolution" value="0.1" />
    <param name="safeDistance" value="0.0" />
    <param name="robotX" value="0.1" />
    <param name="robotY" value="0.1" />
    <param name="goalX" value="30" />
    <param name="goalY" value="2" />

  </node>

  <!-- Rviz -->
  <node pkg="rviz" type="rviz" name="rviz_wavefront_search_demo"
    args="-d $(find wavefront_planner_demos)/launch/rviz/wavefront_search.rviz" />

</launch>